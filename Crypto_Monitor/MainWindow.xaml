<Window x:Class="Crypto_Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crypto_Monitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >
    <Window.Resources>
        <BitmapImage x:Key="ThemeModeIcon" UriSource="/Assets/themeModeIcon.png"/>
        
    </Window.Resources>
    <Grid>
        
        <StackPanel Margin="10">
            <Button Name="ThemeSwitch" HorizontalAlignment="Right"   Click="SwitchTheme" >
                <Image Name="ThemeSwitchIcon" Stretch="Uniform" Source="{DynamicResource ThemeModeIcon}"  Width="30"/>
            </Button>
        </StackPanel>
        <Frame x:Name="main" Source="Pages/FrontPage.xaml" Margin="40"/>
    </Grid>
</Window>
